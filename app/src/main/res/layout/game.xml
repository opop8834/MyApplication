<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <RelativeLayout
            android:id="@+id/layoutCenter"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true">

        </RelativeLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:background="@drawable/imgcolor"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Run"
            android:textColor="#fff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/bac"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="43dp"
            android:text="back"
            tools:layout_editor_absoluteY="217dp" />

        <ImageView
            android:id="@+id/imageDice"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="153dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="135dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1" />


        <ImageView
            android:id="@+id/animDice"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="280dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="110dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice" />

        <ImageView
            android:id="@+id/imagelion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/image1"
            android:layout_marginTop="100dp"
            android:src="@drawable/lion" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/level1" />

        <ImageView
            android:id="@+id/rail"
            android:layout_width="115dp"
            android:layout_height="106dp"
            android:layout_above="@+id/rail3"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="84dp"
            android:layout_toStartOf="@+id/rail2"
            android:rotation="90" />

        <ImageView
            android:id="@+id/rail2"
            android:layout_width="142dp"
            android:layout_height="106dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="-270dp"
            android:layout_toStartOf="@+id/rail3"
            android:rotation="90" />

        <ImageView
            android:id="@+id/rail3"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/imagelion"
            android:layout_marginEnd="151dp"
            android:layout_marginBottom="-50dp"
            android:layout_toStartOf="@+id/rail4"
            android:rotation="90" />

        <ImageView
            android:id="@+id/rail4"
            android:layout_width="128dp"
            android:layout_height="103dp"
            android:layout_above="@+id/rail5"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginBottom="86dp"
            android:rotation="90" />

        <ImageView
            android:id="@+id/rail5"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/image1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="-250dp"
            android:rotation="90" />

        <ImageView
            android:id="@+id/rail6"
            android:layout_width="123dp"
            android:layout_height="102dp"
            android:layout_below="@+id/rail2"
            android:layout_marginStart="-138dp"
            android:layout_marginTop="83dp"
            android:layout_toEndOf="@+id/rail3"
            android:rotation="90" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>