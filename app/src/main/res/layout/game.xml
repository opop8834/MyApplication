<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgameimg">


        <RelativeLayout
            android:id="@+id/layoutCenter"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true">

        </RelativeLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/imgcolor"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Run"
            android:textColor="#fff"
            android:textSize="17sp" />


        <Button
            android:id="@+id/bac"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:text="back"
            tools:layout_editor_absoluteY="217dp" />

        <ImageView
            android:id="@+id/imageDice"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="154dp"
            android:layout_marginEnd="154dp"
            android:layout_marginBottom="94dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dice1" />

        <ImageView
            android:id="@+id/walking"
            android:layout_width="81dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="57dp"
            android:layout_marginBottom="33dp"
            android:scaleType="fitCenter"
            android:src="@drawable/walking" />

        <ImageView
            android:id="@+id/imagelion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/image1"
            android:layout_marginTop="71dp"
            android:src="@drawable/lion" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/level1" />

        <ImageView
            android:id="@+id/wowimg"
            android:layout_width="239dp"
            android:layout_height="103dp"
            android:layout_above="@+id/imageDice"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="13dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>